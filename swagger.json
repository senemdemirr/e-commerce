{
    "openapi": "3.0.0",
    "info": {
        "title": "E-commerce API",
        "version": "1.0.0",
        "description": "API documentation"
    },
    "servers": [
        {
            "url": "http://localhost:4000",
            "description": "Local server"
        }
    ],
    "paths": {
        "/api/categories": {
            "get": {
                "summary": "get all categories and get sub categories",
                "responses": {
                    "200": {
                        "description": "Successfull",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "slug": {
                                                "type": "string"
                                            },
                                            "subcategories": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object",
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer"
                                                        },
                                                        "name": {
                                                            "type":"string"
                                                        },
                                                        "slug": {
                                                            "type": "string"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products": {
            "get": {
                "summary": "get all products",
                "responses": {
                    "200": {
                        "description": "Successfull"
                    }
                }
            }
        },
        "/api/favorites": {
            "get": {
                "summary": "get all favorites",
                "responses": {
                    "200": {
                        "description": "Successfull"
                    }
                }
            }
        }
    }
}